<% if @bands.empty? %>
<p>Nothing here yet.</p>
<%else%>

<%=link_to "New Band",  new_band_path, class: "btn btn-primary" %>
<br>
<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Member Count:</th>
    </tr>
  </thead>
  <tbody>




    <tr>
    <%binding.pry%>
	  <% @bands.all.each do |b|%>
      <th scope="row"><%=link_to "#{b.name}", band_path(b.id) %></th>
      <td><%= b.description%></td>
      <td><%=link_to "#{b.users.uniq.count}"%></td>
    </tr>

  </tbody>

    <%end%>
</table>
    <%end%>