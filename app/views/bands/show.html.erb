<% @band = Band.find(params[:id])%>
<div>
<h3 align="center" class="text text-info"> <%= @band.name %></h3>
<h4 align="center" id="description"><%= @band.description %></h4>
</div>
<br>
<div>
<%if member.count == 0 %>
<%@user = User.find(params[:id])%>
<p>No Members yet.</p> 
<%= button_to "Join", action: @add_user_to_band unless !@joinable %>
<% else %>
<h5><%= member.count %> Members: </p></h5>
<%member.each do |m| %>
<h5><%= link_to "#{m.username} ", user_path(m.id) %></h5>
<br>
<%end%>
<%= button_to "Join",  class: "btn btn-primary", action: @add_user_to_band %>
</div>
<%end%>