<% if @bands.empty? %>
<p>Nothing here yet.</p>
<%else%>
<% params[:user_id] == current_user.id? %>
<%=link_to "new",  new_band_path(@user_id) %>


<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Member Count:</th>
    </tr>
  </thead>
  <tbody>




    <tr>
	  <% @bands.all.each do |b|%>
      <th scope="row"><%=link_to "#{b.name}", band_path(b.id) %></th>
      <td><%= b.description%></td>
      <td><%=link_to "#{b.users.uniq.count}"%></td>
    </tr>

  </tbody>

    <%end%>
</table>
    <%end%>